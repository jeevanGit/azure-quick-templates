
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "teamName": {
            "type": "string",
            "metadata": {
                "description": "This will be used to name artifacts within ACS Cluster"
            }
        }, 
        "servicePrincipalClientId": {
            "type": "securestring",
            "metadata": {
                "description": "Service principal give access for the acs service."
            }
        },
        "servicePrincipalSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Secret used for service principal."
            }
        },
        "masterCount": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "The number of managing nodes in the cluster."
            },
            "allowedValues": [
                1, 3, 5
            ]
        },
        "agentCount": {
            "type": "int",
            "metadata": {
                "description": "The number of worker nodes that has the software deployed."
            },
            "defaultValue": 3,
            "minValue": 1,
            "maxValue": 100
        },
        "dnsPrefix": {
            "type": "string",
            "metadata": {
                "description": "DNS prefix should give a logical name to the 'DNS' entity"
            }
        },
        "vmSizeMaster": {
            "type": "string",
            "allowedValues": [
                "Standard_A10",
                "Standard_A11",
                "Standard_A2",
                "Standard_A2_v2",
                "Standard_A2m_v2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A4_v2",
                "Standard_A4m_v2",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A8_v2",
                "Standard_A8m_v2",
                "Standard_A9",
                "Standard_D11",
                "Standard_D11_v2",
                "Standard_D12",
                "Standard_D12_v2",
                "Standard_D13",
                "Standard_D13_v2",
                "Standard_D14",
                "Standard_D14_v2",
                "Standard_D15_v2",
                "Standard_D2",
                "Standard_D2_v2",
                "Standard_D3",
                "Standard_D3_v2",
                "Standard_D4",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_DS11",
                "Standard_DS11_v2",
                "Standard_DS12",
                "Standard_DS12_v2",
                "Standard_DS13",
                "Standard_DS13_v2",
                "Standard_DS14",
                "Standard_DS14_v2",
                "Standard_DS15_v2",
                "Standard_DS2",
                "Standard_DS2_v2",
                "Standard_DS3",
                "Standard_DS3_v2",
                "Standard_DS4",
                "Standard_DS4_v2",
                "Standard_DS5_v2",
                "Standard_F16",
                "Standard_F16s",
                "Standard_F2",
                "Standard_F2s",
                "Standard_F4",
                "Standard_F4s",
                "Standard_F8",
                "Standard_F8s",
                "Standard_G1",
                "Standard_G2"
            ],
            "defaultValue": "Standard_D2_v2"
        },
        "vmSizeAgent": {
            "type": "string",
            "allowedValues": [
                "Standard_A10",
                "Standard_A11",
                "Standard_A2",
                "Standard_A2_v2",
                "Standard_A2m_v2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A4_v2",
                "Standard_A4m_v2",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A8_v2",
                "Standard_A8m_v2",
                "Standard_A9",
                "Standard_D11",
                "Standard_D11_v2",
                "Standard_D12",
                "Standard_D12_v2",
                "Standard_D13",
                "Standard_D13_v2",
                "Standard_D14",
                "Standard_D14_v2",
                "Standard_D15_v2",
                "Standard_D2",
                "Standard_D2_v2",
                "Standard_D3",
                "Standard_D3_v2",
                "Standard_D4",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_DS11",
                "Standard_DS11_v2",
                "Standard_DS12",
                "Standard_DS12_v2",
                "Standard_DS13",
                "Standard_DS13_v2",
                "Standard_DS14",
                "Standard_DS14_v2",
                "Standard_DS15_v2",
                "Standard_DS2",
                "Standard_DS2_v2",
                "Standard_DS3",
                "Standard_DS3_v2",
                "Standard_DS4",
                "Standard_DS4_v2",
                "Standard_DS5_v2",
                "Standard_F16",
                "Standard_F16s",
                "Standard_F2",
                "Standard_F2s",
                "Standard_F4",
                "Standard_F4s",
                "Standard_F8",
                "Standard_F8s",
                "Standard_G1",
                "Standard_G2"
            ],
            "metadata": {
                "description": "The size of the agent VM needs to be specified"
            }
        },
        "linuxAdmin" : {
            "type": "string",
            "metadata": {
                "description": "Should be the username of the admin user"
            }
        },
        "linuxAdminSSHKey" : {
            "type": "string",
            "metadata": {
                "description": "Should be the public key of the admin user"
            }
        }
    },
    "variables": {},
    "resources": [{
        "name": "[parameters('teamName')]",
        "type": "Microsoft.ContainerService/containerServices",
        "apiVersion": "2017-07-01",
        "location": "[resourceGroup().location]",
        "tags": {
            "team" : "[parameters('teamName')]",
            "baseTemplate": "ARCHITECH"
        },
        "properties": {
          "orchestratorProfile": {
            "orchestratorType": "Kubernetes",
            "orchestratorVersion": "1.8.1"
          },
          "servicePrincipalProfile": {
            "clientId": "[parameters('servicePrincipalClientId')]",
            "secret": "[parameters('servicePrincipalSecret')]"
          },
          "masterProfile": {
            "count": "[parameters('masterCount')]",
            "dnsPrefix": "[parameters('dnsPrefix')]",
            "vmSize": "[parameters('vmSizeMaster')]"
          },
          "agentPoolProfiles": [
            {
              "name": "agentpool",
              "count": "[parameters('agentCount')]",
              "vmSize": "[parameters('vmSizeAgent')]",
              "dnsPrefix": "[parameters('dnsPrefix')]",
              "osType": "Linux"
            }
          ],
          "linuxProfile": {
            "adminUsername": "[parameters('linuxAdmin')]",
            "ssh": {
              "publicKeys": [
                {
                  "keyData": "[parameters('linuxAdminSSHKey')]"
                }
              ]
            }
          },
          "diagnosticsProfile": {
            "vmDiagnostics": {
              "enabled": false
            }
          }
        }
      }],
    "outputs": {}
}